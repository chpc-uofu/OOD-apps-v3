#!/usr/bin/env bash

# Clean the environment
module purge

# Work around spam message about dconf write permissions
#export XDG_RUNTIME_DIR="/tmp/${UID}"
unset XDG_RUNTIME_DIR

# Set working directory to home directory
cd "${HOME}"

#
# Launch Xfce Window Manager and Panel
#

(
  export SEND_256_COLORS_TO_REMOTE=1
  export XDG_CONFIG_HOME="<%= session.staged_root.join("config") %>"
  export XDG_DATA_HOME="<%= session.staged_root.join("share") %>"
  export XDG_CACHE_HOME="$(mktemp -d)"
  module restore
  # set -x
  xfwm4 --compositor=off --sm-client-disable
  #xfwm4 --compositor=off --daemon --sm-client-disable
  xsetroot -solid "#D3D3D3"
  xfsettingsd --sm-client-disable
  xfce4-panel --sm-client-disable
) &

#
# Start MATLAB
#

# Load the required environment
module load <%= context.auto_modules_mathematica %>

# additional environment
<%- if context.additional_environment != "" -%>
  <%= context.additional_environment.gsub /\r\n?/, "\n" %>
<%- end -%>

# Launch program
module list
set -x
<%- if context.auto_modules_mathematica == "mathematica/14.2.0" -%>
WolframNB -nosplash
<%- else -%>
mathematica -nosplash
<%- end -%>
