<%-
  emailcmd = '/uufs/chpc.utah.edu/sys/bin/CHPCEmailLookup.sh ' + ENV["USER"]
  emailaddr = %x[ #{emailcmd}]
-%>

---
batch_connect:
  template: vnc
script:
  email: <%= emailaddr %>
  <%- if /frisco/.match(cluster) == nil and /crystalpeak/.match(cluster) == nil -%>
  native:
    <%- if num_cores != "none" -%>
    - "-n <%= num_cores %>"
    <%- end -%>
  <%- end -%>

