<%
template_root = "/var/www/ood/apps/templates/"
%>
---
attributes:
#  desktop: "mate"
  desktop: "xfce"
  bc_vnc_idle: 0
  bc_vnc_resolution:
    required: true
  node_type: null
  cluster:
    widget: "select"
    options:
      <% IO.foreach(template_root+"clusters") do |line| %>
      - [ "<%= line.to_s.strip %>" ]
      <% end %>    
    help: |
      Select the cluster or Frisco node to create this session on.<br>If you select frisco please ignore all the entries below.

<% IO.foreach(template_root+"job_params.basic") do |line| %>
<%= line %>
<% end %>    

form:
  - cluster
  - bc_vnc_idle
  - desktop
  - bc_num_hours
  - num_cores
  - node_type
  - bc_account
  - bc_queue
  - bc_vnc_resolution
  - bc_email_on_started
